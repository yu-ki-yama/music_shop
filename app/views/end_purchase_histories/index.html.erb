<%= render 'end_header/login_header' %>

<div class="y_admin_purchase_detail_content">
  <% @purchase_histories.each do |history| %>
    <h2 class="y_h2">購入履歴一覧</h2>

    <div class="y_admin_purchase_create">
      <div>注文日 <%= history['created_at'].strftime('%Y/%m/%d') %></div>
      <div>総計 ￥ <%= history['total_price'].to_s(:delimited) %>円</div>
    </div>

    <div class="y_paginate">
      <%= paginate @purchase_histories %>
    </div>

    <div class="y_admin_purchase_detail_content_border y_margin_top">

      <div class="y_admin_purchase_detail_sub_content">

        <% PurchaseDetail.where(purchase_history_id: history['id']).each do |detail| %>

          <div class="y_admin_purchase_detail_sub">
            <%= attachment_image_tag detail, :item_image, :fill, 200, 200, format: "jpeg" %>

            <div class="y_admin_purchase_detail_main_content_detail">
              <p>発注ID： <%= detail['id'] %></p>
              <div class="y_bold">シングル/アルバム名</div>
              <div class="y_admin_purchase_detail_main_content_detail_item">
                <%= detail['item_name_history'] %>
              </div>
              <div>
                <span class="y_bold">歌手名</span>：<%= detail['artist_name_history'] %>
              </div>

              <div class="y_admin_purchase_detail_main_content_detail_sale">
                <div>
                  <span class="y_bold">購入数</span>：<%= detail['sale_number'] %>枚
                </div>
                <div class="y_red">
                  小計 ￥ <%= detail['price_history'].to_s(:delimited) %>円
                </div>
              </div>
            </div>

            <div class="y_admin_purchase_detail_status_btn">
                <% if detail['shipping_status'] == '受付中' %>
                  <div class="y_status_red"><%= detail['shipping_status'] %></div>
                <% elsif detail['shipping_status'] == '準備中' %>
                  <div class="y_status_yellow"><%= detail['shipping_status'] %></div>
                <% elsif detail['shipping_status'] == '発送済' %>
                  <div class="y_status_green"><%= detail['shipping_status'] %></div>
                <% end %>
            </div>

            <div class="y_admin_purchase_detail_address">
              <div>
                <span class="y_bold">宛名</span>：<%= detail['name_history'] %>
              </div>
              <div>
                <span class="y_bold">電話番号</span>：<%= detail['telephone_number_history'] %>
              </div>
              <div>
                〒<%= detail['postal_code_history'] %>
              </div>
              <div>
                <%= detail['address_history'] %>
              </div>
            </div>

          </div>
        <% end %>
      </div>
    </div>

  <% end %>
</div>

