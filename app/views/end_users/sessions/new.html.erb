<%= render 'end_header/not_login_header' %>

<div class="container n_end_users_sessions_container">
	<div class="row">
		<div class="col-xs-4 col-xs-offset-4">
			<h3 class="n_end_users_sessions_title col-xs-12">ログイン画面</h3>
		</div>

    <div class="col-xs-12">
      <% if session[:login_error] %>
        <h3 class="y_h3" style="color: red; text-align: center"> <%= session.delete(:error) %></h3>
        <% session.delete(:login_error) %>
        <% session.delete(:error) %>
      <% end %>
    </div>

		<div class="col-xs-4 col-xs-offset-4">
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="row">
					<div class="col-xs-12">
						<div class="row">
							<div class="col-xs-12 form-group">
								<%= f.label :email, "メールアドレス" %>
								<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-12 form-group">
								<%= f.label :password, "パスワード" %>
								<%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-12 n_end_users_sessions_submit">
								<%= f.submit "ログイン", class: "btn btn-primary col-xs-12" %>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>