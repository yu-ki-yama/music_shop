<%= render 'end_header/login_header' %>

<div class="container n_end_users_edit_container">
	<div class="row">
		<div class="col-xs-12">
			<h3 class="n_end_users_edit_title">退会ページ</h3>
		</div>
		<div class="col-xs-10 col-xs-offset-1">
			<%= form_with url: delete_end_user_path(current_end_user.id), method: :post, local: true do |f| %>
				<div class="row">
					<div class="col-xs-6 form-group">
						<%= f.label :unsubscribe_email, "メールアドレス" %>
						<%= f.email_field :unsubscribe_email, placeholder:"ここにメールアドレスを入力", class: "form-control" %>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-6 n_end_users_edit_submit">
						<%= f.submit "退会する", class: "btn btn-primary col-xs-12" %>
					</div>
				</div>
			<% end %>
        </div>
    </div>
</div>
