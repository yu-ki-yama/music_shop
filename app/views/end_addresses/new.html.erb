<%= render 'end_header/login_header' %>

<div class="container n_end_users_address_container">
	<div class="row">
		<div class="col-xs-12">
			<h3 class="n_end_users_address_title">新規追加住所登録</h3>
		</div>
		<div class="col-xs-10 col-xs-offset-1">
			<%= form_with model: @user, url: end_addresses_path, local: true do |f| %>
				<div class="row">
					<div class="col-xs-6 form-group">
						<%= f.label :name, "名前" %>
						<%= f.text_field :name, class: "form-control" %>
					</div>
					<div class="col-xs-6 form-group">
						<%= f.label :postal_code, "郵便番号" %>
						<%= f.text_field :postal_code, class: "form-control" %>
					</div>
					<div class="col-xs-12 form-group">
						<%= f.label :address, "住所" %>
						<%= f.text_field :address, class: "form-control" %>
					</div>
					<div class="col-xs-6 form-group">
						<%= f.label :telephone_number, "電話番号" %>
						<%= f.text_field :telephone_number, class: "form-control" %>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-6 n_end_users_edit_submit">
						<%= f.submit "新規住所登録", class: "btn btn-primary col-xs-12"%>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>

